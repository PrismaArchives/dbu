<form class="flexcol {{cssClass}}" autocomplete="off">
    <header>
        <div class="heading-class"> 
            <div class="flexrow groove-bordered rm-top-border rm-left-border rm-right-border">
                <img class="profile-img min-size groove-bordered rm-top-border rm-left-border rm-bottom-border" src="icons/svg/mystery-man.svg" data-edit="img" title="{{data.name}}">
                <div class="flexcol">
                    <input type="text" class="name" placeholder="Name">

                    {{> "systems/DBU/templates/actor/partial/character-header-partial.hbs"}}

                    <div class="flexrow bio-div">
                        <div class="flexcol min-size">
                            <label>Karma:</label>
                            {{numberInput value name="numberField" min=0 max=10 step=1}}
                        </div>
                        <div class="flexcol min-size">
                            <label>Alignment:</label>
                            <select name="alignment">
                                <option value="none">Select Alignment:</option>
                                <option value="pure-good">Pure Good</option>
                                <option value="good">Good</option>
                                <option value="neutral">Neutral</option>
                                <option value="evil">Evil</option>
                                <option value="pure-evil">Pure Evil</option>
                            </select>
                        </div>
                        <div class="flexcol min-size">
                            <label>Size:</label>
                            <select name="size">
                                <option value="none">Select Size:</option>
                                <option value="large">Large</option>
                                <option value="medium">Medium</option>
                                <option value="small">Small</option>
                            </select>
                        </div>
                        <div class="flexcol min-size">
                            <label >Race:</label>
                            <select name="attr_race">
                                <option value="none">Select Race:</option>
                                <option value="android">Android</option>
                                <option value="arcosian">Arcosian</option>
                                <option value="human">Earthling</option>
                                <option value="namekians">Namekian</option>
                                <option value="majin">Majin</option>
                                <option value="saiyan">Saiyan</option>
                                <option value="shinjin">Shinjin</option>
                            </select>
                        </div>
                        
                        <div class="flexcol min-size">
                            <label>Subrace:</label>
                            <input type="number" name="subrace" class="subrace" min="0" max="10">
                        </div>
                    </div>
                </div>
            </div>
             <nav class="tabs" data-group="primary-tabs" >
                <a class="item" data-tab="tab1" data-group="primary-tabs">Core</a>
                <a class="item" data-tab="tab2" data-group="primary-tabs">Items</a>
                <a class="item" data-tab="tab3" data-group="primary-tabs">Techniques</a>
                <a class="item" data-tab="tab4" data-group="primary-tabs">Transformations</a>
                <a class="item" data-tab="tab5" data-group="primary-tabs">Biography</a>
            </nav>
        </div>
    </header>
    
   

    <section class="content">

    <div class="tab" data-tab="tab1" data-group="primary-tabs">
        <p>Core</p>    
    </div>

    <div class="tab" id ="device-tab" data-tab="tab2" data-group="primary-tabs">
        <p>Items</p>
    </div>

    <div class="tab" id ="device-tab" data-tab="tab3" data-group="primary-tabs">
        <p>Techniques</p>
    </div>

    <div class="tab" id ="device-tab" data-tab="tab4" data-group="primary-tabs">
        <p>Transformations</p>
    </div>

    <div class="tab" id ="device-tab" data-tab="tab5" data-group="primary-tabs">
        <label class="min-size">
            Hair Color:
            <input type="text" class="hair-color">
        </label>
        <label class="min-size">
            Eye Color:
            <input type="text" class="eye-color">
        </label>
        <label class="min-size">
    </div>




    </section>
</form>